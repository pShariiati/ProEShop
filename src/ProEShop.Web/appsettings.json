{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "ApplicationDbContextConnection": "Server=.;Initial Catalog=ProEShop;Trusted_Connection=True;MultipleActiveResultSets=True"
  },
  "UsersAvatarsFolder": "images|avatars",
  "UserDefaultAvatar": "user-default-avatar.png",
  "AdminUserSeed": {
    "Username": "Admin",
    "Password": "123456",
    "Email": "admin@test.com"
  },
  "EnableEmailConfirmation": false,
  "EmailConfirmationTokenProviderLifespan": "3.00:00:00.0000",
  "PasswordOptions": {
    "RequireDigit": false,
    "RequiredLength": 6,
    "RequireLowercase": false,
    "RequireNonAlphanumeric": false,
    "RequireUppercase": false
  },
  "CookieOptions": {
    "AccessDeniedPath": "/Error/Index/401",
    "CookieName": ".ProEShopIdentity.Sample",
    "ExpireTimeSpan": "15.00:00:00.0000",
    "LoginPath": "/Identity/Login",
    "LogoutPath": "/Identity/Login/LogOff",
    "SlidingExpiration": true
  },
  "LockoutOptions": {
    "AllowedForNewUsers": false,
    "DefaultLockoutTimeSpan": "0.00:05:00.0000",
    "MaxFailedAccessAttempts": 5
  }
}