                                <br />
                                2- قانون دو
                                <br />
                                1- قانون یک
                                <br />
                                2- قانون دو
                                <br />
                                1- قانون یک
                                <br />
                                2- قانون دو
                                <br />
                                1- قانون یک
                                <br />
                                2- قانون دو
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-center">
                <button type="button" class="btn btn-primary">بعدی</button>
                <button class="btn btn-primary">تکمیل ثبت نام</button>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
<partial name="Shared/_ValidationScriptsPartial" />
<script src="~/lib/tinymce/tinymce.min.js"></script>
}
