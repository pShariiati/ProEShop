@page
@model ProEShop.Web.Pages.Seller.RegistrationDoneModel
@{
    ViewData["Title"] = "فروشنده عزیز، از ثبت نام شما ممونیم";
}

<div class="container">
    <div class="row justify-content-center align-items-center vh-100">
        <div class="card text-center col-lg-8 col-xl-6 py-3">
            <div class="card-header">
                فروشگاه
                <a asp-page="/Index">
                    پرو شاپ
                    <img src="~/images/application/eshop.png" width="130" />
                </a>
            </div>
            <div class="card-body">
                <div class="alert alert-success text-center">
                    شما با موفقیت به عنوان فروشنده پروشاپ انتخاب شدید
                </div>
                جهت ورود به پنل کاربری خود روی این
                <a asp-page="/SellerPanel/Index" class="badge bg-primary">
                    لینک
                </a>
                کلیک نمایید
            </div>
        </div>
    </div>
</div>