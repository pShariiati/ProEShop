@page
@model ProEShop.Web.Pages.Profile.Addresses.IndexModel
@{
    ViewData["Title"] = "آدرس ها";
}

<div class="border rounded-3 p-3 custom-border-color-in-profile">
    <div class="d-flex justify-content-between align-items-center">
        <div class="fw-bold border-bottom border-2 border-danger p-2">آدرس ها</div>
        <div class="text-danger border border-danger rounded-3 pointer-cursor p-2">
            <i class="bi bi-geo-alt"></i>
            ثبت آدرس جدید
        </div>
    </div>
    <div class="mt-4 rem15px">
        @foreach (var address in Model.Addresses)
        {
            <div class="address-item-profile-address">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="address-title-in-prfile-address">@address.AddressLine</div>
                    <div class="dropdown address-action-box-in-profile-comment">
                        <i class="bi bi-three-dots-vertical pointer-cursor rem18px" data-bs-toggle="dropdown"></i>
                        <ul class="dropdown-menu dropdown-menu-end pointer-cursor">
                            <li class="d-flex align-items-center py-2 px-3">
                                <i class="bi bi-pencil-square rem18px me-3"></i>
                                <div>ویرایش آدرس</div>
                            </li>
                            <li class="d-flex align-items-center py-2 px-3 delete-address-in-profile">
                                <form method="post" asp-page-handler="DeleteAddress" class="public-ajax-form" functionNameToCallInTheEnd="deleteAddressFunction">
                                    <input type="hidden" name="id" value="@address.Id" />
                                </form>
                                <i class="bi bi-trash rem18px text-danger me-3"></i>
                                <div>حذف آدرس</div>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="d-flex mt-3 justify-content-between align-items-center">
                    <div class="text-secondary">
                        <div class="my-3">
                            <i class="bi bi-signpost-2"></i>
                            @address.CityTitle
                        </div>
                        <div class="my-3">
                            <i class="bi bi-envelope"></i>
                            <span class="persian-numbers">@address.Pob</span>
                        </div>
                        <div class="my-3">
                            <i class="bi bi-telephone"></i>
                            <span class="persian-numbers">@address.PhoneNumber</span>
                        </div>
                        <div class="mt-3">
                            <i class="bi bi-person"></i>
                            @address.FullName
                        </div>
                    </div>
                    <div>
                        <img src="images/application/map.png" class="rounded-3" width="116" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section CustomScripts
{
    <script src="~/Pages/Profile/Addresses/Index.cshtml.js"></script>
}

@section Scripts
{
    <script src="~/lib/sweetalert2/dist/sweetalert2.min.js"></script>
}

@section Styles{
    <link rel="stylesheet" href="~/lib/sweetalert2/dist/sweetalert2.min.css" />
}