@page
@model ProEShop.Web.Pages.Admin.ProductShortLink.IndexModel
@{
    ViewData["Title"] = "لینک های کوتاه محصولات";
}

<div class="card text-dark bg-white border-0 shadow">
    <div class="card-body">
        <h5 class="card-title">
            @ViewData["Title"]
        </h5>
        <form class="alert alert-secondary search-form-via-ajax">
            <input asp-for="ProductShortLinks.Pagination.CurrentPage" />
            <input asp-for="ProductShortLinks.Pagination.PageCount" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <h5>
                جستجو در
                @ViewData["Title"]
            </h5>
            <div class="row">
                <div class="col-12 col-sm-6 col-lg-3 my-2">
                    <label class="form-label" asp-for="ProductShortLinks.SearchBrands.DisplayLink"></label>
                    <input class="form-control" asp-for="ProductShortLinks.SearchBrands.DisplayLink" />
                    <span class="span-error-message" asp-validation-for="ProductShortLinks.SearchBrands.DisplayLink"></span>
                </div>
                <div class="col-12 col-sm-6 col-lg-3 my-2">
                    <label class="form-label" asp-for="ProductShortLinks.SearchBrands.IsUsed"></label>
                    <select class="form-select" asp-for="ProductShortLinks.SearchBrands.IsUsed">
                        <option value="">همه</option>
                        <option value="true">استفاده شده</option>
                        <option value="false">استفاده نشده</option>
                    </select>
                </div>
                <div class="col-12 col-sm-6 col-lg-3 my-2">
                    <label class="form-label" asp-for="ProductShortLinks.SearchBrands.Sorting"></label>
                    <select class="form-select" asp-for="ProductShortLinks.SearchBrands.Sorting" asp-items="Html.GetEnumSelectList<ProEShop.ViewModels.ProductShortLinks.SortingProductShortLinks>()"></select>
                </div>
                <div class="col-12 col-sm-6 col-lg-3 my-2">
                    <label class="form-label" asp-for="ProductShortLinks.SearchBrands.SortingOrder"></label>
                    <select class="form-select" asp-for="ProductShortLinks.SearchBrands.SortingOrder" asp-items="Html.GetEnumSelectList<ProEShop.ViewModels.SortingOrder>()"></select>
                </div>
                <div class="col-12 my-2">
                    <div class="d-grid d-lg-block">
                        <button type="submit" class="btn btn-primary d-inline-flex align-items-center search-form-submit-button" disabled>
                            جستجو ...
                            <span class="spinner-border spinner-border-sm d-none ms-2"></span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="data-table-place">
                <div class="text-center data-table-loading">
                    <img src="~/images/application/loading.gif" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/tinymce/tinymce.min.js"></script>
}

@section CustomScripts{
<script src="~/Pages/Admin/ProductShortLink/Index.cshtml.js"></script>
}