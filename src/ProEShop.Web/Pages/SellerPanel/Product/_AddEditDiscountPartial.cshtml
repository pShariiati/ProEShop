@model ProEShop.ViewModels.ProductVariants.AddEditDiscountViewModel

<div class="row">
    <div class="card text-dark bg-white border-0 shadow">
        <div class="card-body">
            <div class="row">
                <div class="col-md-3 text-center">
                    <img src="~/images/products/@Model.MainPicture" class="w-50" alt="@Model.ProductTitle" />
                </div>
                <div class="col-md-9">
                    <div class="alert alert-secondary">
                        <p class="mb-3 text-center text-primary">
                            <a asp-page="/Product/Index" asp-route-slug="@Model.Slug" asp-route-productCode="@Model.ProductCode" target="_blank">
                                @Model.ProductTitle
                            </a>
                        </p>
                        <div class="row text-center">
                            <div class="col-md-3">
                                دسته بندی:
                                @Model.ProductCategoryTitle
                            </div>
                            <div class="col-md-3">
                                تنوع مجاز این کالا:
                                @(Model.CategoryIsVariantColor ? "رنگ" : "سایز")
                            </div>
                            <div class="col-md-3">
                                برند کالا:
                                @Model.ProductBrandFullTitle
                            </div>
                            <div class="col-md-3">
                                کمیسیون فروش این کالا:
                                %@Model.CommissionPercentage
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <form functionNameToCallInTheEnd="addEditDiscountFunction"
                  method="post" class="public-ajax-form" asp-page-handler="AddEditDiscount">
                <input asp-for="Id" />
                <div class="row">
                    <div class="col-md-4 my-2">
                        <label class="d-flex justify-content-between form-label" asp-for="Price">
                        </label>
                        <input disabled="disabled" asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="span-error-message"></span>
                    </div>
                    <div class="col-md-4 my-2">
                        <label class="d-flex justify-content-between form-label" asp-for="OffPercentage">
                        </label>
                        <input asp-for="OffPercentage" class="form-control" />
                        <span asp-validation-for="OffPercentage" class="span-error-message"></span>
                    </div>
                    <div class="col-md-4 my-2">
                        <label class="d-flex justify-content-between form-label" asp-for="OffPrice">
                        </label>
                        <input asp-for="OffPrice" class="form-control" />
                        <span asp-validation-for="OffPrice" class="span-error-message"></span>
                    </div>
                    <div class="col-md-4 my-2">
                        <label class="d-flex justify-content-between form-label" asp-for="StartDateTime">
                        </label>
                        <input asp-for="StartDateTime" class="form-control" />
                        <span asp-validation-for="StartDateTime" class="span-error-message"></span>
                    </div>
                    <div class="col-md-4 my-2">
                        <label class="d-flex justify-content-between form-label" asp-for="EndDateTime">
                        </label>
                        <input asp-for="EndDateTime" class="form-control" />
                        <span asp-validation-for="EndDateTime" class="span-error-message"></span>
                    </div>
                </div>
                <div class="d-grid">
                    <input type="submit" class="btn btn-primary" value="ایجاد / ویرایش تخفیف" />
                </div>
            </form>
        </div>
    </div>
</div>